// Coded in Stylus: http://learnboost.github.com/stylus/

// ====================================
// Imports

// Reset: http://necolas.github.com/normalize.css/
@import '/vendor/normalize.css'

// nib: http://visionmedia.github.com/nib/
@import 'nib'


// ====================================
// Styles

xxxdark = #000
xxdark  = #399D49
xdark   = #6BD07B
dark    = #458950
neutral = #80E991
hi      = #bbb
xhi     = #fff
xxxhi   = #fff

clearfix()
  &:before,
  &:after
    content ''
    display: block
  &:after
    clear both
  &
    zoom 1

body
  padding: 50px 20px
  text-align: center
  font-size: 13px
  font-family: Prata, serif, "MS P明朝", "ヒラギノ明朝 Pro W3", "平成明朝"
  background-image: url(../images/bg3.png)
  background-position: 0 0
  background-repeat: repeat

a
  color: xxxdark

header
  padding: .4em 3.7em .3em 0
  text-align: left
  margin: 30px auto 0
  display: inline-block
  position: relative
  clearfix()
  h1
    font-size: 25px
    margin: 0
    letter-spacing: 15px
    font-weight: normal
    float: left
    vendor('transform', rotate(-12deg) skew(-12deg) translate(0px, 18px))
    a
      background-color: xdark
      background-color: #aaa
      color: #f5f5f5
      padding: 20px 0 20px 20px
      text-decoration: none
      display: block
      text-shadow: 0 1px #777
      display: inline-block
  p.greeting
    font-size: 25px
    padding: 20px 0 20px 20px
    margin: 0
    background-color: neutral
    background-color: #999
    color: #999
    float: left
    vendor('transform', rotate(20deg) skew(20deg) translate(7px, 37px))
    width: 2em
  .site-description
    padding: 0 0 6px
    font-size: 16px
    position: absolute
    width: 300px
    top: -25px
    left: 100px
    vendor('transform', rotate(-12deg) skew(-12deg))

article
  padding: 0
  h1
    font-size: 20px
    color: dark
    font-weight: bold
    margin: 0 auto
    padding: 0 0 30px
  h2
    font-size: 15px
    font-weight: normal
    margin: 0 auto
  p
    width: 450px
    line-height: 1.7
    font-size: 16px
    text-align: left
    margin: 0 auto
    padding: 0 0 20px
    text-indent: 1em
    code
      border: 1px solid #ddd
      padding: 3px 5px
      font-size: 14px
      border-radius: 5px
      -webkit-border-radius: 5px
      -moz-border-radius: 5px
      color: #666
      margin: 0 5px 3px

footer
  p
    padding: 0
    margin: 0
  margin: 50px 0
  padding: 7px 0
  color: hi
  font-size: 12px
  line-height: 1.5

ul.posts
  margin: 15px 0 20px 50px
  padding: 0
  font-size: 15px
  display: inline-block
  list-style-type: none
  line-height: 1.5
  color: xxdark
  li
    clearfix()
    p
      margin: 0
      padding: 0
      line-height: 1.5
      font-size: 16px
    .date
      float: left
      width: 6em
      display: inline-block
      text-shadow: 0 1px neutral
      padding: .6em 1em .5em
      text-align: right
      background-image: url(../images/arrow.png)
      background-position: -2px 50%
      background-repeat: no-repeat
      vendor('transform', rotate(20deg) skew(20deg) translate(0, 27px))
    .body
      text-align: left
      float: left
      width: 30em
      vendor('transform', rotate(-12deg) skew(-12deg) translate(-9px))
      a
        display: inline-block
        text-decoration: none
        color: xxxhi
        text-shadow: 0 -1px xdark
        padding: .6em 3em .5em 1em
        text-align: left
        background-image: url(../images/arrow2.png)
        background-position: right 50%
        background-repeat: no-repeat
      a:hover
        background-image: url(../images/arrow3.png)
        text-shadow: 0 1px xxxdark
      span
        display: block
        padding: 0 1em
