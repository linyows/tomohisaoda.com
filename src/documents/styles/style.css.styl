// Coded in Stylus: http://learnboost.github.com/stylus/

// ====================================
// Imports

// Reset: http://necolas.github.com/normalize.css/
@import '/vendor/normalize.css'

// nib: http://visionmedia.github.com/nib/
@import 'nib'


// ====================================
// Styles
body
  padding: 50px 30%
  text-align: center
  font-size: 13px
  font-family: Prata, serif, "MS P明朝", "ヒラギノ明朝 Pro W3", "平成明朝"
  //background-image: url(/images/bg.png)
  background-position: 0 0
  background-repeat: repeat
a
  color: #000
header
  padding: 0 0 30px
  h1
    border-top: 1px solid #ddd
    border-bottom: 1px solid #eee
    font-size: 25px
    margin: 0
    letter-spacing: 15px
    font-weight: normal
    a
      padding: 10px 0
      border-top: 3px solid #f5f5f5
      text-decoration: none
      display: block
  p
    color: #ddd
    margin: 0
    padding: 6px 0
    font-size: 16px
    border-bottom: 1px solid #eee
article
  padding: 0
  h1
    font-size: 20px
    color: #666
    font-weight: bold
    margin: 0 auto
    padding: 0 0 10px
  h2
    font-size: 15px
    font-weight: normal
    margin: 0 auto
  ul
    margin: 0 auto
    padding: 0
    font-size: 15px
    display: inline-block
    list-style-type: none
    line-height: 1.5
    color: #DD0000
    li
      p
        margin: 0
        padding: 0
  p
    line-height: 1.5
    font-size: 16px
footer
  p
    padding: 0
    margin: 0
  border-top: 1px solid #eee
  border-bottom: 1px solid #eee
  margin: 50px 0
  padding: 7px 0
  color: #ddd
  font-size: 11px
