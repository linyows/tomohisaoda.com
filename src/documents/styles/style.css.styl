// Coded in Stylus: http://learnboost.github.com/stylus/

// ====================================
// Imports

// Reset: http://necolas.github.com/normalize.css/
@import '/vendor/normalize.css'

// nib: http://visionmedia.github.com/nib/
@import 'nib'


// ====================================
// Styles
body
  padding 50px 30%
  text-align center
  font-size 13px
  font-family: Prata, serif, "MS P明朝", "ヒラギノ明朝 Pro W3", "平成明朝"
  letter-spacing 5px
  //background-image: url(/images/bg.png)
  background-position: 0 0
  background-repeat: repeat
a
  color #000
header
  padding 0 0 50px
  h1
    border-top: 1px solid #ddd
    border-bottom: 1px solid #eee
    font-size 25px
    margin 0
    letter-spacing 15px
    font-weight normal
    span
      border-top: 3px solid #f5f5f5
      padding 10px 0
      display: block
  p
    color #ddd
    margin 0
    padding 6px 0
    font-size 16px
    border-bottom: 1px solid #eee
nav
  border-bottom: 1px solid #eee
  ul
    margin 0 auto 20px
    padding 0 0 20px
    font-size 17px
    font-weight bold
    display inline-block
    list-style-type circle
    text-align left
    line-height 1.5
    color #DD0000
article
  padding: 30px 0 0
  h1
    font-size 20px
    color #666
    font-weight bold
    margin 0 auto
    padding 0 0 10px
  h2
    font-size 15px
    font-weight normal
    margin 0 auto
  ul
    margin 0 auto
    font-size 15px
    display inline-block
    list-style-type circle
    text-align left
    line-height 1.5
    color #DD0000
  img
    border 1px solid #DDD
  .me
    border 10px solid #F5F5F5
    margin 0 auto 30px
    width 82px
    height 82px
    overflow hidden
    line-height 1
footer
  p
    padding 0
    margin 0
    letter-spacing 2px
  border-top: 1px solid #eee
  border-bottom: 1px solid #eee
  margin 50px 0
  padding 7px 0
  color #ddd
  font-size 11px
