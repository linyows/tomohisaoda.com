// Coded in Stylus: http://learnboost.github.com/stylus/

// ====================================
// Imports

// Reset: http://necolas.github.com/normalize.css/
@import '/vendor/normalize.css'

// nib: http://visionmedia.github.com/nib/
@import 'nib'


// ====================================
// Styles

.clr
  clear: both
  float: none
  overflow: hidden
  width: 1px
  height: 0px
  margin: 0 -1px -1px 0
  border: 0
  padding: 0
  font-size: 0
  line-height: 0
.pkg:after
  content: " "
  display: block
  visibility: hidden
  clear: both
  height: 0.1px
  font-size: 0.1em
  line-height: 0
* html .pkg
  display: inline-block
  height: 1%
.pkg
  display: block

body
  padding: 50px 5%
  text-align: center
  font-size: 13px
  font-family: Prata, serif, "MS P明朝", "ヒラギノ明朝 Pro W3", "平成明朝"
  //background-image: url(/images/bg.png)
  background-position: 0 0
  background-repeat: repeat
a
  color: #000
header
  padding: 0 0 30px
  h1
    border-top: 1px solid #ddd
    border-bottom: 1px solid #eee
    font-size: 25px
    margin: 0
    letter-spacing: 15px
    font-weight: normal
    a
      padding: 10px 0
      border-top: 3px solid #f5f5f5
      text-decoration: none
      display: block
  p
    color: #ddd
    margin: 0
    padding: 6px 0
    font-size: 16px
    border-bottom: 1px solid #eee
article
  padding: 0
  h1
    font-size: 20px
    color: #666
    font-weight: bold
    margin: 0 auto
    padding: 0 0 10px
  h2
    font-size: 15px
    font-weight: normal
    margin: 0 auto
  ul.posts
    margin: 0 auto
    padding: 0
    font-size: 15px
    display: inline-block
    list-style-type: none
    line-height: 1.5
    color: #DD0000
    li
      @extend .pkg
      p
        margin: 0
        padding: 0
      .date
        float: left
        width: 6em
        display: inline-block
        background-color: #EEE
        padding: .4em 1em .3em
        text-align: right
        -webkit-transform: rotate(-10deg)
        -moz-transform: rotate(-10deg) skew(-10deg)
      .body
        text-align: left
        float: right
        width: 30em
        -webkit-transform: rotate(10deg)
        -moz-transform: rotate(10deg) skew(10deg) translate(-5px)
        a
          display: inline-block
          text-decoration: none
          background-color: #DD0000
          color: #FFF
          padding: .4em 1em .3em
          text-align: left
        span
          display: block
          padding: 0 1em
  p
    line-height: 1.5
    font-size: 16px
footer
  p
    padding: 0
    margin: 0
  border-top: 1px solid #eee
  border-bottom: 1px solid #eee
  margin: 50px 0
  padding: 7px 0
  color: #ddd
  font-size: 11px
